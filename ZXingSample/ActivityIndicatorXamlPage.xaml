             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="ZXingSample.ActivityIndicatorXamlPage">
    <Grid VerticalOptions="Fill"
              HorizontalOptions="Fill" RowSpacing="0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" ></RowDefinition>
            <RowDefinition Height="45" ></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="runningStatusLabel" Grid.Row="0"
               Text="" 
               TextColor="Black" FontSize="Large"
               VerticalOptions="Fill"
               HorizontalOptions="Fill" />

        <Button Text="Barcode Reading..." Grid.Row="1"
                Clicked="OnButtonClicked" TextColor="White"
                VerticalOptions="Fill" BackgroundColor="Green"
                HorizontalOptions="Fill" />
    </Grid>
