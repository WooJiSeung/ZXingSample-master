<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZXingSample.BluetoothScanner">
    <ContentPage.Content>
        <Grid VerticalOptions="Fill"
              HorizontalOptions="Fill" RowSpacing="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="50" ></RowDefinition>
                <RowDefinition Height="*" ></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Text="DEVICE" Grid.Column="0" Grid.Row="0"></Label>
            <Label x:Name="lbDevice" Text="..." Grid.Column="1" Grid.Row="0"></Label>
            <ScrollView x:Name="srvlist" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
                
                
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>